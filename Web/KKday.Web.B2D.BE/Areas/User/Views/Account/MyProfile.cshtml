                <div class="tab-pane fade active in" id="home">
                     
                        <div class="col-md-8 col-md-offset-1">
                            <div class="row">

                                <div class="col-sm-2">
                                    <div class="form-group">
                                        <label>稱謂</label>
                                        <div class="form-control">@Model.GENDER_TITLE</div>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label>名<span class="text-danger">*</span></label>
                                        <div class="form-control">@Model.NAME_LAST</div>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label>姓<span class="text-danger">*</span></label>
                                        <div class="form-control">@Model.NAME_FIRST</div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>電子信箱<span class="text-danger">*</span></label>
                                        <div class="form-control">@Model.EMAIL</div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>職稱<span class="text-danger">*</span></label>
                                        <div class="form-control">@Model.JOB_TITLE</div>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label>國家或地區代碼<span class="text-danger">*</span></label>
                                        <div class="form-control">@Model.COUNTRY_CODE</div>
                                    </div>
                                </div>
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <label>聯絡電話<span class="text-danger">*</span></label>
                                        <div class="form-control">@Model.TEL</div>
                                    </div>
                                </div>


                        </div>

                        <hr>
                        <div class="form-footer clearfix">
                            <a href="#" class="btn btn-primary">修改</a>
                        </div>
                    </div>
                     
                </div>
                <div class="tab-pane fade" id="profile">
                    <div class="col-md-8 col-md-offset-1">
                       <div class="row">
                                 
                                <div class="col-sm-7">
                                    <div class="form-group">
                                        <label>公司名稱<span class="text-danger">*</span></label>
                                        <div class="form-control">@Model.COMPANY_NAME</div>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <label>統一編號<span class="text-danger">*</span></label>
                                        <div class="form-control">@Model.INVOICE_NO</div>
                                    </div>
                                </div>

                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>公司網站網址<span class="text-danger">*</span></label>
                                        <div class="form-control">@Model.URL</div>
                                    </div>
                                </div>

                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>聯絡地址<span class="text-danger">*</span></label>
                                        <div class="form-control">@Model.ADDRESS</div>
                                    </div>
                                </div>
                                
                        </div>

                    </div>
                </div>
