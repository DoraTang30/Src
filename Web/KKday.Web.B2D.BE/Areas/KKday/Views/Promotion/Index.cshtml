@using KKday.Web.B2D.BE.Models.Model.Common
@using KKday.Web.B2D.BE.Models.Model.Promotion
@using Resources
@inject ILocalizer localizer
@model List<B2dDiscountMst> 
@{
    Layout = "_LayoutMain";
}
@section Stylesheet {
    <link rel="stylesheet" href="~/css/stacktable.css" asp-append-version="true" />
}
@section Scripts {
    <script src="~/js/stacktable.js" asp-append-version="true"></script>
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Content("~/KKday")">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">折扣規則設定</li>
    </ol>
</nav>

<div class="container">
    <div class="row">

        <div class="col-xs-12">
            <h4>折扣規則設定</h4>

            <div class="row">
                <a href="javascript:void(0);" class="btn" data-title="新增折扣規則" data-toggle="modal" data-target="#add"><i class="fas fa-plus"></i> 新增折扣規則</a>
            </div>

        </div>

        <div class="col-xs-12">
            <div id="list_panel" class="table-responsive">
                @await Html.PartialAsync("DiscountMst", Model)
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">@localizer.Text.Add</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label>@localizer.Text.ProductNo<span class="text-danger">*</span></label>
                                <input type="text" id="add_prod_no" class="form-control" onkeyup="this.value=this.value.replace(/[^\d]/,'')" />
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label>@localizer.Text.ProductName<span class="text-danger">*</span></label>
                                <input type="text" id="add_prod_name" class="form-control" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer ">
                <button id="btn_insert" type="button" class="btn btn-warning btn-lg" style="width: 100%;">
                    <span class="glyphicon glyphicon-ok-sign"></span>@localizer.Text.Insert
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">@localizer.Text.Delete</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="disc_mst_xid" />
                <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

            </div>
            <div class="modal-footer ">
                <button id="btn_del" type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script type="text/javascript">

    $(function(){
        $('#mytable').stacktable();

        $("#mytable #checkall").click(function () {
            console.log("checkall clicked");

            if ($("#mytable #checkall").is(':checked')) {
                $("#mytable input[type=checkbox]").each(function () {
                    $(this).prop("checked", true);
                });

            } else {
                $("#mytable input[type=checkbox]").each(function () {
                    $(this).prop("checked", false);
                });
            }
        });

        $("[data-toggle=tooltip]").tooltip();
    });

</script>